{
    // Name this configuration
    "name": "Codesapce for Skills!",
    // Use the base codespace image
    "image": "mcr.microsoft.com/vscode/devcontainers/universal:latest",
    
    "remoteUser": "codespace",
    "overrideCommand": false,

    // Add the IDs of extesions you want installed when container is created
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot"
            ]
        },
        "codespaces": {
            "openFiles": [
                "codespace.md"
            ]
        }
    }
}